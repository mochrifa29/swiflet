<div class="max-w-4xl mx-auto mt-8 p-6">

  <!-- Tombol Kembali -->
  <div class="mb-4">
    <a href="/transaksi" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold">
      <!-- Lucide Icon ArrowLeft -->
      <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
      Kembali
    </a>
  </div>

  <!-- Card Info Transaksi -->
  <div class="bg-white shadow-lg rounded-xl p-6 space-y-4 mb-6">
    <h2 class="text-2xl font-bold mb-4">Detail Transaksi</h2>
    <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Invoice</span>
      <span class="font-semibold"><%= transaksi.invoice %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Nama Pelanggan</span>
      <span class="font-semibold"><%= transaksi.nama_pembeli %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Tanggal</span>
      <span class="font-semibold"><%= Intl.DateTimeFormat('id-ID', {
     day: '2-digit',
    month: 'long',  // nama bulan
    year: 'numeric'
  }).format(transaksi.tanggal_transaksi) %></span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Total Berat</span>
      <span class="font-semibold">
        <%= new Intl.NumberFormat('id-ID').format(transaksi.total_berat / 1000000) + ' Kg' %>
      </span>
    </div>
    <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Total Harga</span>
      <span class="font-semibold">Rp <%= transaksi.total_belanja.toLocaleString('id-ID') %></span>
    </div>
     <div class="flex justify-between">
      <span class="text-gray-500 font-medium">Keterangan</span>
      <span class="font-semibold"><%= transaksi.keterangan %></span>
    </div>
  </div>

  <!-- Card Tabel Item Transaksi -->
  <div class="bg-white shadow-lg rounded-xl p-6 mb-6">
    <h2 class="text-2xl font-bold mb-4">Item Transaksi</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-4 py-2 text-left text-gray-600 font-medium">#</th>
            <th class="px-4 py-2 text-left text-gray-600 font-medium">Nama Barang</th>
            <th class="px-4 py-2 text-left text-gray-600 font-medium">Berat (Kg)</th>
            <th class="px-4 py-2 text-left text-gray-600 font-medium">Harga</th>
            <th class="px-4 py-2 text-left text-gray-600 font-medium">Subtotal</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% transaksi.items.forEach((item, index) => { %>
            <tr>
              <td class="px-4 py-2"><%= index + 1 %></td>
              <td class="px-4 py-2"><%= item.name %></td>
              <td class="px-4 py-2">
                <%= new Intl.NumberFormat('id-ID').format(item.berat / 1000000) + ' Kg' 
                %>
              </td>
              <td class="px-4 py-2">Rp <%= item.harga.toLocaleString('id-ID') %></td>
              <td class="px-4 py-2">Rp <%= item.sub_total.toLocaleString('id-ID') %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Jangan lupa inisialisasi Lucide -->
<script>
  if (window.lucide) {
    window.lucide.replace();
  }

  
</script>

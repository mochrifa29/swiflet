<div class="p-4 md:p-6">
  <!-- Judul -->
  <div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold"><%= title %></h1>

  <!-- Nama User Login -->
  <span class="text-sm text-gray-500 font-medium">
    Hi, <%= user  %>(<%= role %>) 
  </span>
</div>


  <!-- Cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <!-- Users -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-blue-100 rounded-xl">
        <svg data-lucide="users" class="w-6 h-6 text-blue-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Users</span>
        <div class="text-3xl font-bold"><%= totalUsers %></div>
      </div>
    </div>

    <!-- Revenue -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-green-100 rounded-xl">
        <svg data-lucide="handshake" class="w-6 h-6 text-green-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Transaction</span>
        <div class="text-3xl font-bold"><%= totalTransaksi %></div>
      </div>
    </div>

    <!-- Orders -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-purple-100 rounded-xl">
        <svg data-lucide="folder-kanban" class="w-6 h-6 text-purple-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Product</span>
        <div class="text-3xl font-bold"><%= totalBarang %></div>
      </div>
    </div>

    <!-- Orders -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-green-100 rounded-xl">
        <svg data-lucide="warehouse" class="w-6 h-6 text-green-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Stock Grade A</span>
        <div class="text-xl font-bold"><%= total_A.toLocaleString('id-ID') %> Gram</div>
      </div>
    </div>

    <!-- Orders -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-green-100 rounded-xl">
        <svg data-lucide="warehouse" class="w-6 h-6 text-green-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Stock Grade B</span>
        <div class="text-xl font-bold"><%= total_B.toLocaleString('id-ID') %> Gram</div>
      </div>
    </div>

    <!-- Orders -->
    <div
      class="bg-white/80 backdrop-blur shadow-md border border-gray-100 rounded-2xl p-5 flex items-center gap-4"
    >
      <div class="p-3 bg-green-100 rounded-xl">
        <svg data-lucide="warehouse" class="w-6 h-6 text-green-600"></svg>
      </div>
      <div>
        <span class="text-gray-500 text-sm">Stock Grade C</span>
        <div class="text-xl font-bold"><%= total_C.toLocaleString('id-ID') %> Gram</div>
      </div>
    </div>

   
  </div>

  <!-- Chart Section -->
  <div class="mt-6">
    <div class="bg-white shadow rounded-lg p-6">
      <h3 class="text-lg font-bold mb-4">Revenue Chart</h3>
      <canvas id="revenueChart" class="w-full h-64"></canvas>
    </div>
  </div>
</div>

<!-- Login Page -->

<!-- Login Card -->
<div
  class="w-full sm:w-3/4 md:w-1/2 lg:w-1/3 p-8 lg:bg-white/5 lg:backdrop-blur-md rounded-3xl lg:shadow-2xl"
>
  <!-- Logo + Company Name Horizontal -->
  <div class="flex items-center justify-center gap-4 mb-8">
    <!-- Logo -->
    <div
      class="w-16 h-16 flex items-center justify-center rounded-full bg-white/10 backdrop-blur-md shadow-lg"
    >
      <i data-lucide="bird" class="w-8 h-8 text-amber-400"></i>
    </div>
  </div>
 <!-- Pesan sukses register -->
  <% if (success) { %>
  <div class="bg-green-600 text-white px-4 py-3 rounded mb-4 flex items-center" role="alert">
    <svg class="w-5 h-5 mr-2 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
    <span><%= success %></span>
  </div>
<% } %>

  <!-- Pesan error umum -->
  <% if (errors.general) { %>
  <div class="bg-red-600 text-white px-4 py-3 rounded mb-4 flex items-center" role="alert">
    <svg class="w-5 h-5 mr-2 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
    </svg>
    <span><%= errors.general %></span>
  </div>
<% } %>


  <!-- Form -->
  <form method="POST" action="/auth" class="space-y-6">
    <!-- Email -->
    <div>
      <label for="email" class="block text-white/80 mb-2 text-sm sm:text-base"
        >Email</label
      >
      <input
        type="email"
        name="email"
        value="<%= oldData?.email || '' %>"
        id="email"
        placeholder="you@example.com"
        class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition text-sm sm:text-base"
      />
         <% if (errors.email) { %>
        <small class="text-white"><%= errors.email %></small>
      <% } %>
    </div>

    <!-- Password -->
    <div>
      <label
        for="password"
        class="block text-white/80 mb-2 text-sm sm:text-base"
        >Password</label
      >
      <input
        type="password"
        id="password"
        name="password"
        placeholder="••••••••"
        class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition text-sm sm:text-base"
      />
       <% if (errors.password) { %>
        <small class="text-white"><%= errors.password %></small>
      <% } %>
    </div>

    <!-- Remember me + Forgot password -->
    <div
      class="flex flex-col sm:flex-row sm:justify-between sm:items-center text-white/80 text-sm sm:text-base gap-3 w-full"
    >
      <!-- Left -->
      <label class="flex items-center gap-2 flex-1">
        <input type="checkbox" class="accent-amber-500" />
        Remember
      </label>

      <!-- Right -->
      <a href="#" class="hover:underline flex-none text-left sm:text-right">
        Forgot password?
      </a>
    </div>

    <!-- Submit Button -->
    <button
      type="submit"
      class="w-full py-3 cursor-pointer bg-amber-500 hover:bg-amber-600 rounded-lg text-white font-semibold transition text-base sm:text-lg"
    >
      Sign In
    </button>
  </form>

  <!-- Footer -->
  <p class="text-white/70 text-center mt-6 text-sm sm:text-base">
    Don't have an account?
    <a href="/register" class="text-amber-400 hover:underline">Sign Up</a>
  </p>
</div>




<script>
  lucide.createIcons();

 
</script>

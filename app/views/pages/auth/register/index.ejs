<!-- Register Card -->
<div
  class="w-full sm:w-[90%] md:w-[500px] lg:w-[600px] xl:w-[650px] p-8 lg:bg-white/5 lg:backdrop-blur-md rounded-3xl lg:shadow-2xl"
>
  <!-- Logo + Company Name Horizontal -->
  <div class="flex items-center justify-center gap-4 mb-8">
    <h1 class="text-3xl sm:text-4xl font-bold text-white tracking-wide">
      <%= title %>
    </h1>
  </div>

   <!-- Form -->
  <form method="POST" action="/register" class="space-y-6">
    
    <!-- Grid untuk desktop -->
    <div class="grid grid-cols-1 space-y-6 md:space-y-0 md:grid-cols-2 md:gap-6">
      
      <!-- Full Name -->
      <div>
        <label class="block text-white/80 mb-2">Full Name</label>
        <input
          type="text"
          name="name"
          value="<%= oldData.name || '' %>"
          placeholder="Your name"
          class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition"
        />
        <% if (errors.name) { %>
          <small class="text-white"><%= errors.name %></small>
        <% } %>
      </div>

      <!-- Email -->
      <div>
        <label class="block text-white/80 mb-2">Email</label>
        <input
          type="text"
          name="email"
          value="<%= oldData.email || '' %>"
          placeholder="you@example.com"
          class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition"
        />
        <% if (errors.email) { %>
          <small class="text-white"><%= errors.email %></small>
        <% } %>
      </div>

      <!-- Password -->
      <div>
        <label class="block text-white/80 mb-2">Password</label>
        <input
          type="password"
          name="password"
          placeholder="••••••••"
          class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition"
        />
        <% if (errors.password) { %>
          <small class="text-white"><%= errors.password %></small>
        <% } %>
      </div>

      <!-- Confirm Password -->
      <div>
        <label class="block text-white/80 mb-2">Confirm Password</label>
        <input
          type="password"
          name="confirm_password"
          placeholder="••••••••"
          class="w-full px-4 py-3 rounded-lg border border-white/30 bg-white/10 text-white placeholder-white/50 focus:ring-2 focus:ring-amber-500 focus:border-transparent outline-none transition"
        />
        <% if (errors.confirm_password) { %>
          <small class="text-white"><%= errors.confirm_password %></small>
        <% } %>
      </div>

    </div>

    <!-- Submit -->
    <button
      type="submit"
      class="w-full py-3 cursor-pointer bg-amber-500 hover:bg-amber-600 rounded-lg text-white font-semibold transition text-lg"
    >
      Create Account
    </button>
  </form>

  <!-- Footer -->
  <p class="text-white/70 text-center mt-6">
    Already have an account?
    <a href="/login" class="text-amber-400 hover:underline">Sign In</a>
  </p>
</div>
